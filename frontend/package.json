{
  "scripts": {
    "dev": "webpack-dev-server --hot",
    "build": "NODE_ENV=production webpack",
    "lint": "yarn lint-js && yarn lint-spec",
    "lint-js": "eslint --ext .jsx --ext .js -c .eslintrc.json --ignore-pattern \"*.spec.*\" src",
    "lint-spec": "eslint --ext .spec.jsx --ext .spec.js -c .eslintrc_spec.json src",
    "test": "yarn lint && yarn test-unit",
    "test-unit": "NODE_ENV=test nyc mocha-webpack --webpack-config ./webpack.config.js --opts ./mocha-webpack.opts \"src/**/*.spec.*\"",
    "watch-test": "NODE_ENV=test nyc mocha-webpack --webpack-config ./webpack.config.js --opts ./mocha-webpack.opts \"src/**/*.spec.*\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "i18n-js": "^1.0.0",
    "lodash": "^4.17.4",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-actions": "^1.2.1",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0",
    "snapsvg": "^0.5.1",
    "styled-components": "^1.4.3",
    "svg.js": "^2.4.0",
    "webpack": "^2.2.1"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-plugin-react-css-modules": "^2.2.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "imports-loader": "^0.7.0",
    "jsdom": "^9.11.0",
    "mocha": "^3.2.0",
    "mocha-webpack": "^0.7.0",
    "nyc": "^10.3.2",
    "pug": "^2.0.0-beta11",
    "pug-loader": "^2.3.0",
    "react-addons-test-utils": "^15.4.2",
    "react-svg-loader": "^1.1.1",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "sugarss": "^0.2.0",
    "svg-loader": "^0.0.2",
    "webpack-dev-server": "^2.3.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      ".tmp",
      "test",
      "node_modules",
      "**/*.spec.*"
    ]
  }
}
